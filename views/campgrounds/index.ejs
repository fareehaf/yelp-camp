<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>

<h1>All Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Add Campground</a>
</div>
<% for (const campground of campgrounds) { %>
<div class="card mb-3">
    <dv class="row">
        <div class="col-md-4">
            <% if (campground.images.length) { %>
            <img crossorigin="anonymous" src="<%= campground.images[0].url %>" class="img-fluid" alt="">
            <% } else {%>
            <img crossorigin="anonymous"
                src="https://res.cloudinary.com/durjerzor/image/upload/v1687627589/YelpCamp/je1rxeifrryhvoz6l4o2.jpg"
                class="img-fluid" alt="">
            <%}%>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
            <p class="class-text"><%= campground.description %></p>
            <p class="class-text">
                <small class="text-muted"><%= campground.location %></small>
            </p>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"> View
                <%= campground.title %></a>
        </div>
</div>
</dv>
</div>
<% } %>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %>};
</script>
<script src="/javascripts/clusterMap.js"></script>